from datetime import datetime

def depositar(saldo, extrato):
    valor = float(input("Informe o valor do dep√≥sito: R$ "))
    if valor > 0:
        saldo += valor
        extrato += f"{datetime.now().strftime('%d/%m %H:%M')} - Dep√≥sito: R$ {valor:.2f}\n"
        print("‚úÖ Dep√≥sito realizado com sucesso.")
    else:
        print("‚ùå Opera√ß√£o falhou! Valor inv√°lido para dep√≥sito.")
    return saldo, extrato

def sacar(saldo, extrato, numero_saques, limite, LIMITE_SAQUES, taxa=2.50):
    valor = float(input("Informe o valor do saque: R$ "))
    total = valor + taxa
    excedeu_saldo = total > saldo
    excedeu_limite = valor > limite
    excedeu_saques = numero_saques >= LIMITE_SAQUES

    if excedeu_saldo:
        print("‚ùå Opera√ß√£o falhou! Saldo insuficiente para saque + taxa.")
    elif excedeu_limite:
        print(f"‚ùå Opera√ß√£o falhou! Saques limitados a R$ {limite:.2f}.")
    elif excedeu_saques:
        print("‚ùå Opera√ß√£o falhou! N√∫mero m√°ximo de saques excedido.")
    elif valor > 0:
        saldo -= total
        extrato += f"{datetime.now().strftime('%d/%m %H:%M')} - Saque:    -R$ {valor:.2f} (Taxa R$ {taxa:.2f})\n"
        numero_saques += 1
        print(f"‚úÖ Saque realizado com sucesso. (Taxa de R$ {taxa:.2f} aplicada.)")
    else:
        print("‚ùå Opera√ß√£o falhou! Valor inv√°lido para saque.")
    return saldo, extrato, numero_saques

def mostrar_extrato(saldo, extrato):
    print("\n===== EXTRATO =====")
    print("Nenhuma movimenta√ß√£o." if not extrato else extrato)
    print(f"\nSaldo: R$ {saldo:.2f}")
    print("===================\n")

def main():
    saldo = 0
    limite = 500
    extrato = ""
    numero_saques = 0
    LIMITE_SAQUES = 3

    while True:
        print("""
    ===== MENU =====
    [d] Depositar
    [s] Sacar
    [e] Extrato
    [q] Sair
        """)
        opcao = input("Escolha uma op√ß√£o: ").lower()

        if opcao == "d":
            saldo, extrato = depositar(saldo, extrato)
        elif opcao == "s":
            saldo, extrato, numero_saques = sacar(saldo, extrato, numero_saques, limite, LIMITE_SAQUES)
        elif opcao == "e":
            mostrar_extrato(saldo, extrato)
        elif opcao == "q":
            print("üè¶ Obrigado por usar o sistema banc√°rio!")
            break
        else:
            print("‚ùå Opera√ß√£o inv√°lida. Selecione novamente.")

if __name__ == "__main__":
    main()
